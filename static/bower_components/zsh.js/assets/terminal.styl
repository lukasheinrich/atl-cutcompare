// container

blue = #94A0F8
green = #00B82E
gray = #A0A0A0
yellow = #C4C33E
red = #FF6C65

bar-height = 22px
statusbar-height = 15px

.terminal {
  position relative
  width 100%
  height 100%
  background black
  font-family monaco, sans-serif
  font-size 12px
}

// top

.terminal .bar {
  float left
  position relative
  width 100%
  height bar-height
  background linear-gradient(#E5E5E5, #AEAEAE)
  margin-top 1px
  border-radius 3px 3px 0 0 

  .title {
    position: absolute
    width 200px
    height 100%
    left 50%
    margin-left -100px
    text-align center
    line-height bar-height
    font-family sans-serif
    font-size 13px
  }

  .buttons {
    float left
    width 90px
    height 100%

    a {
      display block
      float left
      width 12px
      height 12px
      margin-left 8px
      margin-top 5px
      cursor pointer
    }

    for button-name in close minimize maximize {
      .{button-name}  {
        background-image inline-image(s('buttons/%s.jpg', button-name))
      }

      &:hover {
        .{button-name} {
          background-image inline-image(s('buttons/%s-hover.jpg', button-name))
        }
      }
    }
  }

  .full-screen {
    display block
    float right
    width 14px
    height 15px
    margin 4px
    background inline-image('buttons/full-screen.jpg')
    cursor pointer

    &:hover {
      background inline-image('buttons/full-screen-hover.jpg')
    }
  }

}

// bottom

.terminal .status-bar {
  position absolute
  bottom 2px
  width 100%
  height statusbar-height
  background #252525
  color white
  overflow hidden

  ul {
    margin 0
    padding 0
    font-size 11px

    li {
      display inline-block
      margin-right 5px

      .data {
        float left

        &:before {
          content ''
          float left
          height 100%
          border-left 8px solid #252525
          border-top 8px solid transparent
          border-bottom 8px solid transparent
        }
      }

      .index {
        float left
        position relative
        padding 0 7px
        color #6B6B6B

        &::after,
        &::before {
          content ''
          position absolute
          left 100%
          width 0
          height 0
          border solid transparent
        }

        &:before {
          top 0
          z-index 2
          border-width 8px
          border-left-color #252525
        }

        &::after {
          top -2px
          z-index 1
          border-width 10px
          border-left-color #6B6B6B
        }
      }

      .ps {
        padding-left 20px
        padding-right 10px
        color #BFBFBF
      }

      span {
        display inline-block
        height 100%
      }

      &::after {
        content ''
        display inline-block
        height 100%
        border 8px solid transparent
        border-right-width 0
      }

      &:first-child {
        color black

        .data {
          background white

          &:before  {
            border-left-width 0
          }
        }

        .index {
          &::after,
          &:before {
            border 0
          }
        }

        &::after {
          border-left-color white
        }
      }
        

      &.active {
        .data {
          background #009ABA

          .index {
            color #8DE0F8

            &::before {
              border-left-color #009ABA
            }

            &::after {
              border-left-color #8DE0F8
            }
          }

          .ps {
            color white
          }
        }

        &::after {
          border-left-color #009ABA
        }
      }
    }
  }
}

// Terminal

.terminal .content {
  float left
  width calc(90% - 15px)
  padding-right 10%
  height s('calc(100% - %s - %s - %s)', bar-height, statusbar-height, 8px)
  padding-top 2px
  padding-left 5px
  overflow auto

  > div {
    position relative
  }

  .ps1 {
    display inline-block
    color white
    margin-right 5px

    .who {
      color blue
    }

    .where {
      color green
    }

    .branch {
      color gray
    }
  }

  .code {
    color white
    white-space pre-wrap

    &.stderr::before {
      content 'âœ–'
      float left
      color red
      margin-right 7px
    }
  }

  .caret {
    display inline-block
    width 8px
    height 15px
    margin-bottom -4px
    background white
    color black
  }

  .valid {
    color green

    .caret {
      background green
      color black
    }
  }

  .invalid {
    color red

    .caret {
      background red
      color black
    }
  }

  .string {
    color yellow
  }
}

.fake-input {
  width 1px
  height 1px
  border 0
  background none
}

*:focus {
  outline: 0;
}
